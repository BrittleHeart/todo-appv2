    "node-sass": "^4.14.1",
    "nodemon": "^1.19.4",
    "prettier": "^1.19.1",
    "webpack": "^4.44.2",
    "webpack-cli": "^3.3.12",
    "webpack-node-externals": "^1.7.2"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix .",
