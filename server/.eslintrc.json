{
    "extends": ["eslint:recommended", "prettier"],
    "parserOptions": {
        "ecmaVersion": 10,
        "sourceType": "module"
    },
    "env": {
        "browser": false,
        "node": true,
        "mocha": true
    },
    "rules": {
        "semi": ["error", "never"],
        "quotes": ["error", "single"],
        "arrow-body-style": ["error", "as-needed"],
        "no-var": "error"
    }
}